<Window x:Class="WorkReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkReport"
        mc:Ignorable="d"
        Title="Отчеты" Height="450" Width="800" Background="#FF2B2B2B" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="299*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <SolidColorBrush>#1E1E1E</SolidColorBrush>
        </Grid.Background>
        <Button x:Name="zipButton" Margin="0,0,50,141" Click="Zip_Button_Click" Content="Создать архивы" Background="#333333" Foreground="White" BorderBrush="White" HorizontalAlignment="Right" Width="164" Height="65" VerticalAlignment="Bottom" Grid.ColumnSpan="2"></Button>
        <Button x:Name="select_Button_" Margin="0,0,49,235" Click="Select_Button_Click" Content="Whatsapp" Background="#333333" Foreground="White" HorizontalAlignment="Right" Width="165" Height="64" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Button x:Name="png_Rename_Button" Margin="0,0,49,328" Click="Png_Button_Click" Content="Переименовать фото" Background="#333333" Foreground="White" Height="64" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="165" Grid.ColumnSpan="2"/>
        <Button x:Name="clear_Button" Margin="0,0,50,48" Click="Clear_Button_Click" Content="Очистить" Background="#333333" Foreground="White" BorderBrush="White" HorizontalAlignment="Right" Width="164" Height="65" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
